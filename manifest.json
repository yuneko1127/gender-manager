{
    "manifest_version": 3,
    "name": "性別マネージャー",
    "version": "1.0",
    "description": "Web上にある性別に関する入力を自動で入力する拡張機能です。",
    "permissions": ["tabs", "scripting", "storage"],
    "action": {
      "default_popup": "popup.html",
      "default_title": "保存データを確認"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["scripts/content_script.js"]
      },
      {
        "matches": ["https://docs.google.com/forms/*"],
        "js": ["scripts/googleform.js"]
      }
    ],
    "host_permissions": [
      "<all_urls>"
    ]
}